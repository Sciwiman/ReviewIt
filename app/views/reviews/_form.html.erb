<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <% if browser.firefox? %>
    <p><i>NB: You are using firefox, please go to another browser to select a rating </i></p>
  <%else%>
    <div class='field'>
      <%= f.label :rating %><br />
      <%= f.range_field :rating, :in => 0..5, :step => '1'%>
      <br>
      <a>0&nbsp;&nbsp;&nbsp;1&nbsp;&nbsp;&nbsp;2&nbsp;&nbsp;&nbsp;3&nbsp;&nbsp;&nbsp;4&nbsp;&nbsp;&nbsp;5</a>
    </div>
  <%end%>
  <br />
  <hr />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
